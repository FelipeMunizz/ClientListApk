<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtClientName"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:text="@string/app_nome_cliente"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/btnEditClient"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/app_edit_client_btn"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/btnDeleteClient"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/app_delte_client_btn"
            android:src="@drawable/delete_24dp_e8eaed" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
